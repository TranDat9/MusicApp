<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp"
    >
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_margin="15dp"
            android:text="1"
            android:textSize="20sp"
            android:id="@+id/textviewdanhsachindex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/textviewtenbaihat"
            android:textSize="20dp"
            android:textColor="#030303"
            android:text="Ten ca khuc"
            android:layout_toRightOf="@id/textviewdanhsachindex"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:textSize="20dp"
            android:textColor="#979797"
            android:text="ca si"
            android:layout_toRightOf="@id/textviewdanhsachindex"
            android:layout_below="@id/textviewtenbaihat"
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/tenviewcasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        </TextView>
        <ImageView
            android:src="@drawable/iconlove"
            android:layout_marginRight="5dp"
             android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/imageviewluotthichdanhsachbaihat"
            android:layout_width="30dp"
            android:layout_height="30dp">

        </ImageView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
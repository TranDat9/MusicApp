<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageviewbaihathot"
        android:scaleType="fitXY"
        android:layout_margin="3dp"
        android:layout_width="80dp"
        android:layout_height="80dp">
    </ImageView>
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/imageviewbaihathot"
        android:id="@+id/textviewtenbaihathot"
        android:text="Anh Mat Em roi"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="#363636"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
       android:layout_below="@id/textviewtenbaihathot"
        android:id="@+id/textviewtencasibaihathot"
        android:text="Tung ST"
        android:lines="1"
        android:layout_toRightOf="@id/imageviewbaihathot"
        android:ellipsize="end"
        android:textColor="#363636"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
    <ImageView
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/iconlove"
        android:id="@+id/imageviewLove"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp">

    </ImageView>

</RelativeLayout>
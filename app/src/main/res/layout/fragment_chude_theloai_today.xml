<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:id="@+id/relativechudetheloai"
        >
        <TextView
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="CHỦ ĐỀ VÀ THỂ LOẠI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textviewtiltle">


        </TextView>

        <TextView
            android:id="@+id/txtXemthem"
            android:layout_alignParentRight="true"
            android:textColor="#913677"
            android:textSize="18sp"
            android:text="Xem them"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

    </RelativeLayout>
    <HorizontalScrollView
        android:scrollbars="none"
        android:id="@+id/horizontalscrollview"
        android:layout_below="@+id/relativechudetheloai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </HorizontalScrollView>

</RelativeLayout>
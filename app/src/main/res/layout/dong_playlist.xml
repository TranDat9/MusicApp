<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:scaleType="fitXY"
        android:id="@+id/imageviewbackgroundplaylis"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        >
    </ImageView>
    <View
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/custom_background_banner"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        ></View>
 <ImageView
     android:id="@+id/imgPlaylist"
     android:layout_width="50dp"
     android:layout_height="50dp"
     android:scaleType="fitXY"
     android:elevation="6dp"
     android:layout_marginBottom="10dp"
     android:layout_marginLeft="15dp"
     android:layout_alignBottom="@id/imageviewbackgroundplaylis"
     >

 </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/txtTenplaylist"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:layout_marginLeft="13dp"
        android:layout_toRightOf="@id/imgPlaylist"
        android:layout_alignBottom="@id/imgPlaylist"
        android:text="nhung bai hit hot"

        >

    </TextView>
</RelativeLayout>